<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | JKR Club</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gradient-to-br from-gray-950 via-slate-900 to-gray-800 text-white min-h-screen font-sans relative flex items-center justify-center px-4">

    <!-- Floating Back Button -->
    <a href="/" class="fixed top-6 left-6 z-50 bg-gray-800 hover:bg-gray-700 text-sm px-4 py-2 rounded-full shadow-lg border border-gray-700 transition">
      â† Return to Club Home
    </a>

    <!-- Login Card -->
    <div class="w-full max-w-md bg-gradient-to-tr from-slate-800 to-gray-900 p-8 rounded-2xl shadow-xl">
      <h1 class="text-3xl font-bold text-center mb-2 text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-purple-400 drop-shadow-md">
        ğŸ” JKR Club
      </h1>
      <p class="text-center text-sm text-gray-400 mb-6">Login to unlock the secrets</p>

      <!-- Flash/Error -->
      <%- include("partials/errors.ejs") %>
      <% if (success && success.length > 0) { %>
        <div class="mb-4 bg-green-600/10 text-green-300 border border-green-600 px-4 py-2 rounded text-sm">
          âœ… <%= success[0] %>
        </div>
      <% } %>

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-6">
        <!-- Identifier -->
        <div class="relative">
          <input
            type="text"
            name="identifier"
            id="identifier"
            value="<%= oldInput ? oldInput.identifier : '' %>"
            required
            class="peer w-full px-4 py-2 bg-gray-900 border border-gray-700 rounded focus:outline-none focus:ring-2 focus:ring-rose-500 placeholder-transparent text-sm"
            placeholder="Email or Username"
          />
          <label
            for="identifier"
            class="absolute left-3 -top-2 text-gray-400 text-xs peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-sm peer-focus:-top-5 peer-focus:text-xs transition-all"
          >
            Email or Username
          </label>
        </div>

        <!-- Password -->
        <div class="relative">
          <input
            type="password"
            name="password"
            id="password"
            required
            class="peer w-full px-4 py-2 bg-gray-900 border border-gray-700 rounded focus:outline-none focus:ring-2 focus:ring-rose-500 placeholder-transparent text-sm"
            placeholder="Password"
          />
          <label
            for="password"
            class="absolute left-3 -top-2 text-gray-400 text-xs peer-placeholder-shown:top-2.5 peer-placeholder-shown:text-sm peer-focus:-top-5 peer-focus:text-xs transition-all"
          >
            Password
          </label>
        </div>

        <!-- Submit -->
        <button
          type="submit"
          class="w-full py-2 bg-rose-600 hover:bg-rose-700 rounded shadow text-sm font-semibold transition"
        >
          ğŸšª Login
        </button>
      </form>

      <!-- Sign Up Redirect -->
      <p class="mt-6 text-center text-sm text-gray-500">
        Don't have an account?
        <a href="/signup" class="text-purple-400 hover:underline">Join Now</a>
      </p>
    </div>
  </body>
</html>
